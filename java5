import java.sql.*;

public class FetchEmployees {
    public static void main(String[] args) {
        // Step 1: Define DB URL, username, and password
        String url = "jdbc:mysql://localhost:3306/testdb"; // replace 'testdb' with your DB name
        String user = "root";  // replace with your MySQL username
        String password = "root";  // replace with your MySQL password

        try {
            // Step 2: Load MySQL JDBC Driver (optional for modern JDBC versions)
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Step 3: Establish Connection
            Connection con = DriverManager.getConnection(url, user, password);
            System.out.println("✅ Connected to the database!");

            // Step 4: Create Statement object
            Statement stmt = con.createStatement();

            // Step 5: Execute SQL query
            String query = "SELECT EmpID, Name, Salary FROM Employee";
            ResultSet rs = stmt.executeQuery(query);

            // Step 6: Process ResultSet
            System.out.println("\n--- Employee Records ---");
            while (rs.next()) {
                int id = rs.getInt("EmpID");
                String name = rs.getString("Name");
                double salary = rs.getDouble("Salary");

                System.out.println("ID: " + id + " | Name: " + name + " | Salary: " + salary);
            }

            // Step 7: Close connections
            rs.close();
            stmt.close();
            con.close();
            System.out.println("\n✅ Connection closed.");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
