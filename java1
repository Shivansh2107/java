import java.util.ArrayList;
import java.util.Scanner;

public class SumUsingAutoboxing {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Create an ArrayList of Integer (Wrapper class)
        ArrayList<Integer> numbers = new ArrayList<>();

        System.out.println("Enter integers (type 'done' to finish):");

        // Accept multiple integer inputs as strings
        while (true) {
            String input = sc.next();  // read as string

            if (input.equalsIgnoreCase("done")) {
                break;
            }

            try {
                // String Parsing: Convert String -> int (primitive)
                int value = Integer.parseInt(input);

                // Autoboxing: primitive int -> Integer object automatically
                numbers.add(value);
            } catch (NumberFormatException e) {
                System.out.println("Invalid input, please enter an integer or 'done'.");
            }
        }

        // Calculate sum (Unboxing happens here)
        int sum = 0;
        for (Integer num : numbers) {
            // Unboxing: Integer -> int automatically
            sum += num;
        }

        // Display result
        System.out.println("Numbers entered: " + numbers);
        System.out.println("Sum = " + sum);

        sc.close();
    }
}
